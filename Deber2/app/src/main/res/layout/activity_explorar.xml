<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <Button
        android:id="@+id/btn_subCategoria"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bordes_redondos"
        android:text="EspaÃ±ol"
        android:textAllCaps="false"
        android:textColor="#020202"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/captura_videoR"
        app:layout_constraintTop_toBottomOf="@+id/tv_espectadores" />

    <ImageView
        android:id="@+id/captura_videoR"
        android:layout_width="82dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/just_chatting" />

    <TextView
        android:id="@+id/tv_categoriaEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/captura_videoR"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_espectadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/captura_videoR"
        app:layout_constraintTop_toBottomOf="@+id/tv_categoriaEx" />

</androidx.constraintlayout.widget.ConstraintLayout>