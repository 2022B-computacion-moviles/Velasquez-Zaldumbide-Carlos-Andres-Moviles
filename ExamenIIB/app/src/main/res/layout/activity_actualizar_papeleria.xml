<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actualizarPapeleria">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_act_direccion"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:hint="Direccion:"
        app:layout_constraintEnd_toEndOf="@+id/input_act_nombre_pape"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_act_nombre_pape"
        app:layout_constraintTop_toBottomOf="@+id/input_act_nombre_pape" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_act_nombre_pape"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:hint="Nombre:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_act_telefono"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Telefono:"
        android:inputType="phone"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/input_act_direccion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_act_direccion"
        app:layout_constraintTop_toBottomOf="@+id/input_act_direccion"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/input_act_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Fecha de fundacion:"
        android:inputType="date"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/input_act_telefono"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/input_act_telefono"
        app:layout_constraintTop_toBottomOf="@+id/input_act_telefono" />

    <Button
        android:id="@+id/btn_actualizar_papeleria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_act_fecha"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/input_act_fecha"
        app:layout_constraintTop_toBottomOf="@+id/input_act_fecha"
        app:layout_constraintVertical_bias="0.149" />
</androidx.constraintlayout.widget.ConstraintLayout>